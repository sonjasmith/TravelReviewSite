@{
    ViewBag.Title = "Home Page";
}

 <!--Reviews carousel-->
    <div class="row container-fluid carousel">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!--Indicators-->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!--Wrapper for slides-->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/1400-cleveland-ohio-art-museum.imgcache.rev47a746f1fad83e7b3ad012f38ef9670b.web.jpg" img="responsive" alt="Cleveland Museum of Art" style="width: 100%; height: auto">
                    <div class="carousel-caption">
                        <p class="review"><italic>"Cleveland has some of the best musuems!"</italic><br>Stella, Avid Napper</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/cleveland-wallpaper.jpg" img="responsive" alt="Nightlife in Cleveland" style="width: 100%; height: auto">
                    <div class="carousel-caption">
                        <p class="review"><italic>"Nightlife in Cleveland was amazing!"</italic><br>Stella, Nashville</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/E.-4th-Street-at-night-courtesy-Downtown-Cleveland-Alliance.jpg" img="responsive" alt="" style="width: 100%; height: auto">
                    <div class="carousel-caption">
                        <p class="review"><italic>"Great restaurants and museums!"</italic><br>Ron, Chicago</p>
                    </div>
                </div>
            </div>

            <!--Left and right controls-->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

